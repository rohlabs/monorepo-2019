{
  "presets": ["next/babel", "@zeit/next-typescript/babel"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./"],
        "alias": {
          "~": "./",
          "@": "./src",
          "components": "./src/components",
          "modules": "./src/modules"
        }
      }
    ],
    ["styled-components", { "ssr": true }]
  ]
}
